<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All PDFs</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
        function deletePDF(filename) {
            fetch("/delete-pdf", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ filename }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert("File deleted successfully");
                    location.reload();
                } else {
                    alert("Failed to delete file");
                }
            })
            .catch(err => console.error("Error:", err));
        }
    </script>
</head>
<body class="bg-gray-100 p-4">
    <div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold text-center mb-4">List of All PDFs</h1>
        <ul>
            <% pdfFiles.forEach(file => { %>
                <li class="p-2 border-b flex justify-between items-center">
                    <a href="<%= file.url %>" target="_blank" class="text-blue-500"><%= file.name %></a>
                    <span class="text-gray-500 text-sm"><%= new Date(file.created).toLocaleString() %></span>
                    <button onclick="deletePDF('<%= file.name %>')" class="bg-red-500 text-white px-2 py-1 rounded text-sm">
                        Delete
                    </button>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
